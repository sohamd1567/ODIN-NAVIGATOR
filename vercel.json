{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/public/**", "server/**", "shared/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "^/ws",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "dist/public/index.html"
    }
  ]
}
