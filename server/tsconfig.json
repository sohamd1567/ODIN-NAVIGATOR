{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": false,
    "noEmit": false,
    "outDir": "../server-dist",
    "rootDir": "..",
    "baseUrl": "..",
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "server/**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "**/*.test.ts",
    "**/__tests__/**",
    "../client/**/*"
  ]
}
